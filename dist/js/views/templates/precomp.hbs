<div class="itemTemplateWrapper">
	<div class="titleContainer">
		<ul>
			<li class="title1">Choose Your Sailings:</li>
			<li class="title2">(Pick one for each box)</li>
		</ul>
	</div>

	{{#each this}}

	<div class="listing">
		<img class="sailing_main_img" src={{this.sailing_main_image}}/>
		<div class="lowPrice">
			<p>Starting at</p>
			<p>${{this.starting_at_price}}</p>
			<div class="triangle"></div>
		</div>
		<div class="listingContent">
				<p class="cruiseLineInfo">{{this.cruise_line_name}} - {{this.cruise_ship_name}}</p>

			
			<p class="sailingName">{{sailing_name}}</p>

			<ul class="sailingDateUL">
				{{#sailing_options}}
					<li>
						<input class="date" type="radio">
					 		{{sailing_date}}
						</input>
					</li>
				{{/sailing_options}}
			</ul>

			<ul class="sailingPriceUL">
				{{#sailing_options}}
					<li class="sailingPrice">${{this.sailing_price}}</li>
				{{/sailing_options}}
			</ul>
		</div>
	</div>{{!-- end listing --}}
	{{/each}}


	<div class="sailingsTotalContainer">
		<div class="totalText">Your Selected Sailings Total</div>
		<div class="total"></div>
	</div>

</div>